{
  "kind": "collectionType",
  "collectionName": "lawns",
  "info": {
    "singularName": "lawn",
    "pluralName": "lawns",
    "displayName": "Lawn"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "speed": {
      "type": "integer",
      "default": 5,
      "min": 1,
      "max": 10
    },
    "resistance": {
      "type": "integer",
      "min": 0,
      "max": 10
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "landing": {
      "type": "component",
      "component": "common.months",
      "repeatable": false
    },
    "price": {
      "type": "component",
      "component": "common.packages",
      "repeatable": true,
      "required": true
    },
    "type": {
      "type": "component",
      "component": "common.lawn-type-percent",
      "repeatable": true,
      "required": true
    },
    "isFeature": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "partner": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::partner.partner"
    },
    "description": {
      "type": "text"
    },
    "purposes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::purpose.purpose",
      "mappedBy": "lawn"
    },
    "characteristic": {
      "type": "component",
      "component": "common.characteristic",
      "repeatable": true
    },
    "seasonality": {
      "type": "string"
    },
    "germination_time": {
      "type": "string"
    },
    "full_cover_time": {
      "type": "string"
    },
    "density": {
      "type": "string"
    },
    "frost_resistance": {
      "type": "string"
    },
    "shade_tolerance": {
      "type": "string"
    },
    "heat_resistance": {
      "type": "string"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::lawn.lawn",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lawn.lawn",
      "mappedBy": "parent"
    }
  }
}
