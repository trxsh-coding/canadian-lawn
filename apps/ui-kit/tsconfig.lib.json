{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["lib"],
  "exclude": ["src", "dist", "node_modules"]
}
